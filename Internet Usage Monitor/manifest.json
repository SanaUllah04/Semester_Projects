{
    "manifest_version": 3,
    "name": "Internet Usage Monitor",
    "version": "1.0",
    "description": "Monitor internet consumption, including download/upload rates and total data usage.",
    "permissions": ["activeTab", "scripting", "webRequest", "storage"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "new.png",
        "48": "new.png",
        "128": "new.png"
      }
    },
    "icons": {
      "16": "new.png",
      "48": "new.png",
      "128": "new.png"
    }
    
  }
  